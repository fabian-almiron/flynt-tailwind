<div class="actionButtons">
  {% for button in buttons %}
    {% if button.style == 'text' %}
      <a class="actionButtons__link" href="{{ button.url|e('esc_url') }}">
        {{ button.text|e }}
      </a>
    {% elseif button.style == 'outline' %}
      <a class="btn btn--ghost btn--dark" href="{{ button.url|e('esc_url') }}">
        {{ button.text|e }}
      </a>
    {% elseif button.style == 'primary' %}
      <a class="btn btn--secondary" href="{{ button.url|e('esc_url') }}">
        {{ button.text|e }}
      </a>
    {% endif %}
  {% endfor %}
</div>
